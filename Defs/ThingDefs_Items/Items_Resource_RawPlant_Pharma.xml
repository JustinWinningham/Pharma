<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=========================== Parent Defs ==============================-->

  <ThingDef Abstract="True" Name="PharmaPlantBaseStandard" ParentName="ResourceBase">
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>6</DeteriorationRate>
			<Mass>0.03</Mass>
    </statBases>
    <tickerType>Rare</tickerType>
	<thingCategories>
      <li>PlantMatter</li>
    </thingCategories>
  </ThingDef>
  
  <ThingDef Abstract="True" Name="PharmaPlantEdible" ParentName="PharmaPlantBaseStandard">
    <ingestible>
      <preferability>RawBad</preferability>
			<tasteThought>AteRawFood</tasteThought> <!-- Might be worth making a new thought for consuming raw drug based crops -->
      <nutrition>0.07</nutrition>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>RawVegetable_Eat</ingestSound>
    </ingestible>
    <socialPropernessMatters>true</socialPropernessMatters>
    <thingCategories>
      <li>PlantFoodRaw</li>
    </thingCategories>
    <comps>
			<li Class="CompProperties_FoodPoisoningChance">
				<humanlikeOnly>true</humanlikeOnly>
			</li>
    </comps>
  </ThingDef>

  <!--=========================== Crops and Plants ==============================-->
  
  <ThingDef ParentName="PharmaPlantEdible">
    <defName>RawPowderLeaf</defName>
    <label>powderleaf</label>
    <description>powderleaf leaves. the tips are coated in a fine powder.</description>
    <graphicData>
      <texPath>Things/Item/Resource/PlantFoodRaw/PowderLeaf</texPath>
    </graphicData>
    <statBases>
      <MarketValue>2</MarketValue>
    </statBases>
    <ingestible>
      <foodType>VegetableOrFruit</foodType>
    </ingestible>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>1</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
  </ThingDef>
  
</Defs>
