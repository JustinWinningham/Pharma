<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BenchBase">
    <defName>PharmaLab</defName>
    <label>Pharma Lab</label>
    <thingClass>Building_WorkTable</thingClass>
    <description>An advanced druglab with the latest and greatest equipment for drug processing.</description>
    <graphicData>
      <texPath>Textures/Things/Building/PharmaLab</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(3,1)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <costList>
      <Steel>150</Steel>
	  <Component>10</Component>
	  <Plasteel>15</Plasteel>
    </costList>
	<!--Lower Cost?-->
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>75</costStuffCount>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>2500</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Cleanliness>-5</Cleanliness>
    </statBases>
    <size>(3,1)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
		  <li>DistillationTank</li>
        </linkableFacilities>
      </li>
    </comps>
	<researchPrerequisites><li>AdvancedPharmaceuticalFabrication</li></researchPrerequisites>
    <designationHotKey>Misc2</designationHotKey>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
  </ThingDef>

</Defs>
