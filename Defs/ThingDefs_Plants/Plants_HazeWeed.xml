<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="PlantBase">
    <defName>Hazeweed</defName>
    <label>Hazeweed Plant</label>
    <description>A small leafy plant that changes colour from blue to purple as it ripens. It has a mild calming effect.</description>
    <statBases>
      <MaxHitPoints>40</MaxHitPoints>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/HazeWeedPlant</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>50</pathCost>
    <ingestible>
      <nutrition>0.30</nutrition>
    </ingestible>
    <plant>
		<fertilitySensitivity>0.4</fertilitySensitivity>
		<growDays>10</growDays>
		<dieIfLeafless>true</dieIfLeafless>
		<reproduces>false</reproduces>
		<harvestTag>Standard</harvestTag>
		<harvestedThingDef>RawHazeweed</harvestedThingDef>
		<harvestYield>9</harvestYield>
		<sowMinSkill>10</sowMinSkill>
		<sowTags>
			<li>Ground</li>
			<li>Hydroponic</li>
		</sowTags>
		<topWindExposure>0.2</topWindExposure>
		<visualSizeRange>
			<min>0.25</min>
			<max>1.2</max>
		</visualSizeRange>
	</plant>
  </ThingDef>
  
</Defs>
