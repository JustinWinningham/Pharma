    <plant>
	
		<growMinGlow>0</growMinGlow>
		<growOptimalGlow>0</growOptimalGlow>
		<reproduces>true</reproduces>
		<reproduceRadius>2</reproduceRadius>
		<dieIfLeafless>false</dieIfLeafless>
	
		<fertilityMin>0.1</fertilityMin>
		<fertilitySensitivity>0.7</fertilitySensitivity>
		<growDays>0.1</growDays>
		<dieIfLeafless>false</dieIfLeafless>
		<harvestWork>50</harvestWork>
		<maxMeshCount>1</maxMeshCount>
		<wildClusterRadius>10</wildClusterRadius>
		<visualSizeRange>
			<min>0.7</min>
			<max>0.85</max>
		</visualSizeRange>
		<topWindExposure>0.4</topWindExposure>
		<wildClusterSizeRange>
			<min>15</min>
			<max>25</max>
		</wildClusterSizeRange>
		<harvestTag>Standard</harvestTag>
		<sowMinSkill>0</sowMinSkill>
		<sowTags>
			<li>Ground</li>
			<li>Hydroponic</li>
		</sowTags>
		<topWindExposure>0.2</topWindExposure>
