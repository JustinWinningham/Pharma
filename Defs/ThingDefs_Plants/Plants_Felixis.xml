<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="PlantBase">
    <defName>Felixis</defName>
    <label>Felixis Plant</label>
    <description>A small glowing mushroom with vibrant colors. Extremely fragile and notoriously difficult to grow.</description>
    <statBases>
      <MaxHitPoints>10</MaxHitPoints>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/FelixisPlant</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>50</pathCost>
    <ingestible>
      <nutrition>0.30</nutrition>
    </ingestible>
    <plant>
		<maxMeshCount>4</maxMeshCount>
		<fertilitySensitivity>0.4</fertilitySensitivity>
		<growDays>20</growDays>
		<dieIfLeafless>true</dieIfLeafless>
		<reproduces>false</reproduces>
		<harvestTag>Standard</harvestTag>
		<harvestedThingDef>RawFelixis</harvestedThingDef>
		<harvestYield>3</harvestYield>
		<sowMinSkill>14</sowMinSkill>
		<sowTags>
			<li>AdvancedHydroponic</li>
		</sowTags>
		<topWindExposure>0.2</topWindExposure>
		<visualSizeRange>
			<min>0.4</min>
			<max>0.7</max>
		</visualSizeRange>
	</plant>
  </ThingDef>

</Defs>
