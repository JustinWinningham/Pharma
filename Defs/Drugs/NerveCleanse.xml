<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MakeableDrugPillBase">
    <defName>NerveCleanse</defName>
    <label>nervecleanse</label>
    <description>A non-habit forming drug that supresses physical pain for a short amount of time.</description>
    <graphicData>
      <texPath>Things/Item/Drug/NerveCleanse</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <socialPropernessMatters>false</socialPropernessMatters>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>500</WorkToMake>
      <MarketValue>25</MarketValue>
      <Mass>0.005</Mass>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <drugCategory>Medical</drugCategory>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>NerveCleanseHigh</hediffDef>
          <severity>1.0</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
			<researchPrerequisite>NerveCleanse</researchPrerequisite>
      <recipeUsers>
        <li>PharmaLab</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Neutroamine>2</Neutroamine>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1100</listOrder>
        <overdoseSeverityOffset>
          <min>0.05</min>
          <max>0.1</max>
        </overdoseSeverityOffset>
      </li>
    </comps>
  </ThingDef>

  <HediffDef>
    <defName>NerveCleanseHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>Nervecleanse</label>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.34</severityPerDay>
      </li>
    </comps>
      <stages>
        <li>
          <painFactor>0.85</painFactor>
		  <painOffset>-0.1</painOffset>
        </li>
      </stages>
  </HediffDef>

</Defs>
