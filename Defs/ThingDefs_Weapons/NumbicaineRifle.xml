<?xml version="1.0" encoding="utf-8"?>

<Defs>

  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_NumbicaineRifle</defName>
    <label>numbicaine bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>0</damageAmountBase>
      <speed>55</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_NumbicaineRifle</defName>
    <label>Numbicaine gun</label>
    <description>Fires syringes full of Numbicaine. Useful for keeping colonists fighting longer than they normally would be able to.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/Pistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>InteractPistol</soundInteract>
    <statBases>
      <WorkToMake>15000</WorkToMake>
      <Mass>1.2</Mass>
      <AccuracyTouch>1.00</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.70</AccuracyMedium>
      <AccuracyLong>0.50</AccuracyLong>
      <RangedWeapon_Cooldown>4</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>30</Steel>
      <Component>2</Component>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <projectileDef>Bullet_NumbicaineRifle</projectileDef>
        <warmupTime>0.5</warmupTime>
        <range>17</range>
        <soundCast>ShotPistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
	<!--<AddHediffChance>1.0</AddHediffChance>
	<HediffToAdd>Numbicaine</HediffToAdd>
	<thingClass>Pharma.Projectile_NumbicaineBullet</thingClass>-->
  </ThingDef>

